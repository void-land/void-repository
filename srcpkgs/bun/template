post_extract() {
	ls -la

	mkdir $HOME/.bun/bin
	mv bun $HOME/.bun/bin
}

do_patch() {
	ls -la

	sed -i 's/set(LLVM_VERSION 16)/set(LLVM_VERSION 17)/' CMakeLists.txt

	# cat CMakeLists.txt
}

post_build() {
	ninja -Cbuild-release
}

do_install() {
	ls -la
}
